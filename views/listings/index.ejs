<% layout("/layouts/boilerplate") %>
 
<div class="row row-cols-lg-3  row-cols-md-2  row-cols-sm-1">
   <%for(let listing of allListings){%>
  <a href="/listings/<%=listing._id%>" class="listing-link">
      <div class="card cols" >
  <img src="<%= listing.image.url%>" style="height: 20rem;" class="card-img-top" alt="listing-image">
  <div class="card-img-overlay"></div>
  <div class="card-body">
    <h5 class="card-title"><b><%= listing.title%></b></h5>
    <p class="card-text"><%= listing.description%>
    <br>
 Price:  &#8377 <%=listing.price.toLocaleString("en-IN")%> / night
    <br>
    Location: 
  <%= listing.location%>
    <br>
    Country: 
  <%= listing.country%></p>
    <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
  </div>
</div>
  </a>

    <%}%>
</div>